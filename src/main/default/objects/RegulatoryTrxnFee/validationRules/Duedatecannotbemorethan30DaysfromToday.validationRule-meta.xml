<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Duedatecannotbemorethan30DaysfromToday</fullName>
    <active>true</active>
    <description>Created as part of ALR-185</description>
    <errorConditionFormula>AND(    
NOT(ISBLANK(DueDate)),    
   DATEVALUE(DueDate) &gt;(TODAY() + 30)
 
 
)</errorConditionFormula>
    <errorDisplayField>DueDate</errorDisplayField>
    <errorMessage>Due Date must be 30 days from today.</errorMessage>
</ValidationRule>
